{{#spritesheet}}
  @mixin i() {
    display: inline-block;
    background-image: url({{image}});
    background-repeat: no-repeat;
    background-size: {{half width}}px {{half height}}px;
  }

  %i, i, .i {
    @include i();
  }
{{/spritesheet}}

{{#sprites}}
  @mixin i-{{name}}() {
    width: {{half width}}px;
    height: {{half height}}px;
    background-position: {{half offset_x}}px {{half offset_y}}px;
  }

  %i-{{name}}, .i-{{name}} {
    @include i-{{name}}();
  }
{{/sprites}}
