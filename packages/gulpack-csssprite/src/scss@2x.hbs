{{#spritesheet}}
  @mixin csssprite() {
    display: inline-block;
    vertical-align: middle;
    background-image: url({{image}});
    background-repeat: no-repeat;
    background-size: {{half width}}px {{half height}}px;
  }

  %csssprite {
    @include csssprite;
  }
{{/spritesheet}}

{{#sprites}}
  @mixin {{name}}() {
    width: {{half width}}px;
    height: {{half height}}px;
    background-position: {{half offset_x}}px {{half offset_y}}px;
  }

  %{{name}} {
    @include {{name}};
  }
{{/sprites}}

@mixin csssprite-classes() {
  i, .i, .csssprite {
    @extend %csssprite;
  }
  {{#sprites}}
    .{{name}} {
      @extend %{{name}};
    }
  {{/sprites}}
}
