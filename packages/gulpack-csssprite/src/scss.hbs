{{#spritesheet}}
  @mixin csssprite() {
    display: inline-block;
    vertical-align: middle;
    background-image: url({{image}});
    background-repeat: no-repeat;
    background-size: {{px.width}} {{px.height}};
  }

  %csssprite {
    @include csssprite;
  }
{{/spritesheet}}

{{#sprites}}
  @mixin {{name}}() {
    width: {{px.width}};
    height: {{px.height}};
    background-position: {{px.offset_x}} {{px.offset_y}};
  }

  %{{name}} {
    @include {{name}};
  }
{{/sprites}}

@mixin csssprite-classes() {
  {{sprites.[0]._base}} {
    @extend %csssprite;
  }
  {{#sprites}}
    .{{name}} {
      @extend %{{name}};
    }
  {{/sprites}}
}
